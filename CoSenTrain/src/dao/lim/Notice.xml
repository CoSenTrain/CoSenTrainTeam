<?xml version="1.0" encoding="EUC-KR"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="bean.lim.Notice">

     <select id="getNoticeNumber" resultType="java.lang.Integer">
      select board_seq.nextval from dual
     </select>
   <insert id="insertNotice" parameterType="notice">
 insert into board(no,title,contents,imgfile,type,userno,moddate,regdate) values(#{no},#{title},#{contents},
 #{imgfile},#{type},#{userno},sysdate,sysdate)  
    
   </insert>
   
   <select id="getNotice" parameterType="java.util.HashMap" resultType="notice">
   
   select rm,no,title,contents,imgfile,regdate,type
from(
 select rownum rm, no,title,contents,imgfile,regdate,type from board where type='notice')
     where rm between #{start} and #{end} order by no desc
   
       
   </select>
  
   <select id="getOneNotice" parameterType="java.lang.Integer" resultType="notice">
   
    select * from board where no =#{no}
   </select>
  
   <select id="getTotalRow" parameterType="java.util.HashMap" resultType="java.lang.Integer">
    select count(*) from board where type='notice'
     <if test="query!=null">
		      AND ${query} LIKE '%'||#{data}||'%'
		</if>	
     
   </select>
    
  
